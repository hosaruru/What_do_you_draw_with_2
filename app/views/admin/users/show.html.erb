	<div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
		<div class='mt-5', id="title">
			<p>
			<span>ユ</span>
			<span>ー</span>
			<span>ザ</span>
			<span>ー</span>
			<span>ペ</span>
			<span>ー</span>
			<span>ジ</span>
			</p>
		</div>
		<table class='table mypage'>      	      	
			<tr>
			<td><%= image_tag @user.image %><br><%= @user.user_name %>	<span><%= link_to "", edit_admin_user_path ,class: "bi bi-gear"%></span></td>
			</tr>
		</table>	      
	</div>
	<div class='container px-5 px-sm-0'>
		<div class='row'>
			<div class='col-md-8 offset-md-1' style='margin: 0 auto;'>
				<table class='table table-hover table-inverse'>
					<tbody>
						<% if @post.blank? %>
							<p style="text-align: center;">投稿がありません。</p>
						<% else %>
							<% @post.each do |post| %>
								<div class="container">
									<div class="row o-2column">
									    <%= link_to post_path(post.id) do %>
											<div class="col-md-8 ml-4">
												<%= post.twitter.to_s.html_safe %>
											</div>
											  <div class="ml-3 col-md-3">
													<h5><i class="bi bi-magic"></i> 使用ソフト</h5>
													<p>・<%= post.software.name %></p>
													<h5><i class="bi bi-pen"></i> 線画ペン</h5>
													<p>・<%= post.brush %></p>													
													<% if post.post.pen_present? %>
													  <h5 class="mt-4"><i class="bi bi-pencil-fill"></i> 塗りペン、他</h5>
													<% end %>
													<% post.pens.each do |use_pen| %>
														<% if use_pen.use_pen.present? %>
															  <p>・<%= use_pen.use_pen %></p>
														<% end %>
													<% end %>
											        <br>
											  		<p><%= link_to "詳細", admin_post_path(post.id),class: "col btn btn-dark-blue btn-rounded"  %></p>
											  		<%= "#{post.post_comments.count} コメント" %>
										      </div>							
									    <% end %>
									</div>
								</div>
							<% end %>
						<% end %>					
					</tbody>
				</table>
			</div>
		</div>
	</div>
<ul class="pagination"><li class="page-item"><%= paginate @posts%></li></ul>
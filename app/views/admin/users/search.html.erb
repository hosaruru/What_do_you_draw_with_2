<div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
        <div class='mt-5 mb-5', id="title">
        	<p>
        		<span>検</span>
        		<span>索</span>
        		<span>結</span>
        		<span>果</span>
        	</p>
        </div>
        <table class='table table-hover table-inverse mb-5'>
            <thead>
                <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th colspan="4"></th>
                </tr>
            </thead>
            <tbody>
                <% @results.each do |user| %>
                <tr>
                <td><%= user.id %></td>
                <td><%= link_to user.user_name, admin_user_path(user.id) %></td>
                <td><%= user.email %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
</div>

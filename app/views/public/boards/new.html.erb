<div class="alret">
  <%= flash[:alret] %>
</div>
<div class="col-md-6 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5" style="background:rgba(255,255,255,0.5);">
<div class='pt-5', id="title">
		<p>
		<span>Q</span>
		<span>U</span>
		<span>E</span>
		<span>S</span>
		<span>T</span>
		<span>I</span>
		<span>O</span>
		<span>N</span>
	</p>
</div>
    <%= form_with model: @board do |f| %>
      <div class="container pb-5">
          <div class="question_box">
            <!--<p> 紹介文<br><%#= f.text_area :introduction %></p>-->
            <p class="text_box"><b style="color: #dc3545;">*</b>タイトル<br><%= f.text_field :headline %></p> 
            <p class="text_box text_box_main"><b style="color: #dc3545;">*</b>本文<br><%= f.text_field :question %></p> 
            <p><span class="any">画像</span>
              <%= f.file_field :image, accept: "image/*", class: "w-100", id: "upload" , type: "file", name: "upload" %>
            </p>
            <p><%= f.submit "投稿！" ,class: "col btn btn-dark-blue btn-rounded" %></p>
    <% end %>
      </div>

    </div>
</div> 


<div class="notice">
  <%= flash[:notice] %>
</div>
<div class='mt-5', id="title">
	<p>
		<span>P</span>
		<span>O</span>
		<span>S</span>
		<span>T</span>
		<span style ="margin-right:20px;">S</span>
		<span>L</span>
		<span>I</span>
		<span>S</span>
		<span>T</span>
		<span>S</span>
	</p>
</div>
<div class="wrap">
	<div class="top">
		<%= search_form_for @q, url: search_posts_path do |f| %>
		  <%= f.search_field :brush_cont , class: 'search_container mb-2', placeholder: "線画ペン検索" %>
		  <%= f.submit '検索' ,class: "btn btn-dark btn-sm"%>
		<% end %>
		<%= search_form_for @q, url: search_posts_path do |f| %>
		  <%= f.search_field :pens_use_pen_cont, class: 'search_container' , placeholder: "塗りペン検索" %>
		
		  <%= f.submit '検索' ,class: "btn btn-dark btn-sm"%>
		<% end %>	
	</div>
	<div class='container px-5 px-sm-0'>
		<div class='row'>
			<div class='col-md-8' style='margin: 0 auto;'>
					<% if user_signed_in? %>
						<% @posts.each do |post| %>
							<div class="post_wrapper">
								<div class="row o-2column"  style="margin-left: -48px;">
									<%= link_to post_path(post.id) do %>
										<div class="col-md-8 ml-4" style="padding-left: 0px;">
											<%= post.twitter.to_s.html_safe %>
										</div>
										<div class="ml-3 col-md-3">
											<h5><i class="bi bi-person-fill"></i></i> ユーザー</h5>
											<p><%= link_to user_path(post.user.id) do %><%= image_tag post.user.image %> <%= post.user.user_name %><% end %></p>
											<h5><i class="bi bi-magic"></i> 使用ソフト</h5>
											<p>・<%= post.software.name %></p>
											<h5><i class="bi bi-pen"></i> 線画ペン</h5>
											<p>・<%= post.brush %></p>
											<% if post.pens.present? %>
											  <h5 class="mt-4"><i class="bi bi-pencil-fill"></i> 塗りペン、他</h5>
											<% end %>
											<% post.pens.each do |use_pen| %>
												<% if use_pen.use_pen.present? %>
													  <p>・<%= use_pen.use_pen %></p>
												<% end %>
											<% end %><br>									
											<p><%= link_to "詳細", post_path(post.id), class: "col btn btn-dark-blue btn-rounded" %></p>							
											<% post.tags.each do |tag| %>
												<p style="color: #17a2b8;"><i class="bi bi-tag-fill"></i><%= link_to tag.tag_name, posts_path(tag_id: tag.id) %></p>											
											<% end %>									
										</div>							
									<% end %>
								</div>
							</div>
						<% end %>
					<% else %>
						<% @posts.each do |post| %>
							<div class="container">
								<div class="row o-2column">
									<div class="col-md-8 ml-4">
									<%= link_to post_path(post.id) do %>
										<%= post.twitter.to_s.html_safe %>
									</div>
									<div class="ml-3 col-md-3">
									<h5><i class="bi bi-magic"></i> 使用ソフト</h5>
										<p>・<%= post.software.name %></p>
									<h5><i class="bi bi-pen"></i> 線画ペン</h5>
										<p>・<%= post.brush %></p>
										<% post.pens.each do |use_pen| %>
											<% if use_pen.use_pen.present? %>
									<h5><i class="bi bi-pencil-fill"></i>塗りペン</h5>
												<p>・<%= use_pen.use_pen %></p>
											<% end %>
										<% end %><br>								
									</div>							
									<% end %>
								</div>
							</div>
						<% end %>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<ul class="pagination"><li class="page-item"><%= paginate @posts%></li></ul>
	</div>
</div>